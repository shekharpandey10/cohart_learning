generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boss {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  age      Int?
  city     String
  todos    Todo[]
}

model Todo {
  id          Int    @id
  title       String
  description String
  userId      Int
  boss        Boss @relation(fields: [userId],references: [id])
}
